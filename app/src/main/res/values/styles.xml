<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/appBGColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--****************************************************************************************-->
    <!--Custom Styles begin here-->

    <!--Frame Layout in layout_posters_activity-->
    <style name="frameLayoutHoldingPostersFragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <!--LinearLayout in layout_posters_fragment-->
    <style name="LinearLayoutHoldingPostersGridView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--GridView that shows Movie Posters-->
    <style name="postesGridView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:columnWidth">@dimen/hdpi_col_width</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">@dimen/hdpi_horizontal_spacing</item>
        <item name="android:numColumns">2</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">@dimen/hdpi_vertical_spacing</item>
        <item name="android:layout_marginTop">@dimen/hdpi_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/hdpi_bottom_margin</item>
        <item name="android:layout_marginLeft">@dimen/hdpi_left_margin</item>
        <item name="android:layout_marginRight">@dimen/hdpi_right_margin</item>
    </style>

    <style name="frameLayoutInMovieDetailsActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <!--Root layout of Movie Details Fragment-->
    <style name="movieDetailsFragRootRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--Movie Title TExt View-->
    <style name="movieDetailsTitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/blackColor</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/movieTitleTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/whiteColor</item>
    </style>


    <!--Movie Poster Image View-->
    <style name="moviePosterImgVeu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_below">@id/titleTextView</item>
        <item name="android:layout_marginLeft">@dimen/posterImgViewLeftMargin</item>
        <item name="android:layout_marginTop">@dimen/posterImgViewTopMargin</item>
    </style>


    <!--Release Date Literal text-->
    <style name="releaseDateLitralText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/titleTextView</item>
        <item name="android:layout_marginLeft">@dimen/releaseDateTextLieralLeftMargin</item>
        <item name="android:layout_marginTop">@dimen/releaseDateTextLieralTopMargin</item>
        <item name="android:layout_toRightOf">@id/moviePosterImgView</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--Release Date Text view   -->
    <style name="releaseDateTVt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/releaseDateTextLiteral</item>
        <item name="android:layout_marginLeft">@dimen/releaseDateTextTextViewLeftMargin</item>
        <item name="android:layout_marginTop">@dimen/releaseDateTextTextViewTopMargin</item>
        <item name="android:layout_toRightOf">@id/moviePosterImgView</item>
    </style>


    <!--Vote Text Literal  -->
    <style name="voteLtrlText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/releaseDateTextview</item>
        <item name="android:layout_marginLeft">@dimen/voteTextLieralLeftMargin</item>
        <item name="android:layout_marginTop">@dimen/voteTextLieralTopMargin</item>
        <item name="android:layout_toRightOf">@id/moviePosterImgView</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Vote Text View  -->
    <style name="voteTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/voteTextLiteral</item>
        <item name="android:layout_marginLeft">@dimen/voteTextTextViewLeftMargin</item>
        <item name="android:layout_marginTop">@dimen/voteTextTextViewTopMargin</item>
        <item name="android:layout_toRightOf">@id/moviePosterImgView</item>
    </style>


    <!--Synopsis scroll View-->
    <style name="synoScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/moviePosterImgView</item>
        <item name="android:layout_marginBottom">@dimen/synoScrollViewBottomMargin</item>
        <item name="android:layout_marginTop">@dimen/synoScrollViewTopmMargin</item>
    </style>

    <!--Synopsis scroll Text View-->
    <style name="synoTV">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/synoTextViewMargin</item>
        <item name="android:padding">@dimen/synoTextViewPadding</item>
    </style>

    <!--****** Movie Info Details Layout Styles for Landscape Orientation Start *********-->


    <!--Movie Title TExt View-->
    <style name="movieDetailsTitleTextViewLandscape">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/blackColor</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/movieTitleTextSizeLandscape</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/whiteColor</item>
    </style>

    <!--Movie Poster Image View-->
    <style name="moviePosterImgVeuLnadScape">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_below">@id/titleTextView</item>
        <item name="android:layout_marginLeft">@dimen/posterImgViewLeftMarginLandscape</item>
        <item name="android:layout_marginTop">@dimen/posterImgViewTopMarginLandscape</item>
    </style>

    <!--Release Date Literal text-->
    <style name="releaseDateLitralTextLandscape">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/titleTextView</item>
        <item name="android:layout_marginLeft">@dimen/releaseDateTextLieralLeftMarginLandscape</item>
        <item name="android:layout_marginTop">@dimen/releaseDateTextLieralTopMarginLandscape</item>
        <item name="android:layout_toRightOf">@id/moviePosterImgView</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Release Date Text view   -->
    <style name="releaseDateTVtLandscape">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/releaseDateTextLiteral</item>
        <item name="android:layout_marginLeft">@dimen/releaseDateTextTextViewLeftMarginLandscape</item>
        <item name="android:layout_marginTop">@dimen/releaseDateTextTextViewTopMarginLandscape</item>
        <item name="android:layout_toRightOf">@id/moviePosterImgView</item>
    </style>

    <!--Vote Text Literal  -->
    <style name="voteLtrlTextLandscape">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/releaseDateTextview</item>
        <item name="android:layout_marginLeft">@dimen/voteTextLieralLeftMarginLandscape</item>
        <item name="android:layout_marginTop">@dimen/voteTextLieralTopMarginLandscape</item>
        <item name="android:layout_toRightOf">@id/moviePosterImgView</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Vote Text View  -->
    <style name="voteTVLandscape">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/voteTextLiteral</item>
        <item name="android:layout_marginLeft">@dimen/voteTextTextViewLeftMarginLandscape</item>
        <item name="android:layout_marginTop">@dimen/voteTextTextViewTopMarginLandscape</item>
        <item name="android:layout_toRightOf">@id/moviePosterImgView</item>
    </style>

    <!--Synopsis scroll View-->
    <style name="synoScrollViewLandscape">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/moviePosterImgView</item>
        <item name="android:layout_marginBottom">@dimen/synoScrollViewBottomMarginLandscape</item>
        <item name="android:layout_marginTop">@dimen/synoScrollViewTopmMarginLandscape</item>
    </style>

    <!--Synopsis scroll Text View-->
    <style name="synoTVLandscape">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/synoTextViewMarginLandscape</item>
        <item name="android:padding">@dimen/synoTextViewPaddingLandscape</item>
    </style>
</resources>
