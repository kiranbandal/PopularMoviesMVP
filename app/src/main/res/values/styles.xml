<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/appBGColor</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--****************************************************************************************-->
    <!--Custom Styles begin here-->

    <!--Frame Layout in layout_posters_activity-->
    <style name="frameLayoutHoldingPostersFragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <!--LinearLayout in layout_posters_fragment-->
    <style name="LinearLayoutHoldingPostersGridView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--GridView that shows Movie Posters-->
    <style name="postesGridView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:columnWidth">@dimen/hdpi_col_width</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">@dimen/hdpi_horizontal_spacing</item>
        <item name="android:numColumns">2</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">@dimen/hdpi_vertical_spacing</item>
        <item name="android:layout_marginTop">@dimen/hdpi_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/hdpi_bottom_margin</item>
        <item name="android:layout_marginLeft">@dimen/hdpi_left_margin</item>
        <item name="android:layout_marginRight">@dimen/hdpi_right_margin</item>
    </style>


</resources>
